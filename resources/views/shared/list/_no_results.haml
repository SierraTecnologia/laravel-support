
%tr.no-results(class=$listing->count()?'remove':null)
    %td(colspan="999")
        %p

            -if($many_to_many)
                != __('facilitador::list.no_results.many_to_many.none', ['url' => URL::to(FacilitadorURL::relative('index', $parent_id, $controller)), 'description' => $description, 'title' => $title, 'parent' => str_singular($parent_controller_title)])

                -if (app('facilitador.user')->can('update', $controller))
                    != __('facilitador::list.no_results.many_to_many.none_create')

            -elseif ($parent_id)
                != __('facilitador::list.no_results.none', ['url' => URL::to(FacilitadorURL::relative('index', $parent_id, $controller)), 'description' => $description, 'title' => $title, 'parent' => str_singular($parent_controller_title)])

                -if (app('facilitador.user')->can('create', $controller))
                    != __('facilitador::list.no_results.create', ['url' => URL::to(FacilitadorURL::relative('create', null, $controller))])

            -else
                No <b>#{$title}</b> have been created yet.

                -if (app('facilitador.user')->can('create', $controller))
                    <span class="nowrap">Click <b><a href="#{URL::to(FacilitadorURL::relative('create', null, $controller))}"><span class="glyphicon glyphicon-plus"></span> New</a></b></span> to create one.
